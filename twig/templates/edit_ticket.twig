{% extends 'base.twig' %}

{% block title %}Edit Ticket{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto py-8">
  <h1 class="text-2xl font-bold mb-4">Edit Ticket</h1>

  <form action="/tickets/edit/{{ ticket.id }}" method="POST" class="bg-white shadow rounded-lg p-6">
    <div class="mb-4">
      <label class="block mb-1">Title</label>
      <input type="text" name="title" value="{{ ticket.title }}" class="border rounded w-full p-2">
    </div>

    <div class="mb-4">
      <label class="block mb-1">Category</label>
      <select name="category" class="border rounded w-full p-2">
        <option value="bug" {% if ticket.category == 'bug' %}selected{% endif %}>Bug</option>
        <option value="feature" {% if ticket.category == 'feature' %}selected{% endif %}>Feature</option>
        <option value="task" {% if ticket.category == 'task' %}selected{% endif %}>Task</option>
      </select>
    </div>

    <div class="mb-4">
      <label class="block mb-1">Description</label>
      <textarea name="description" rows="3" class="border rounded w-full p-2">{{ ticket.description }}</textarea>
    </div>

    <div class="mb-4">
      <label class="block mb-1">Status</label>
      <select name="status" class="border rounded w-full p-2">
        <option value="open" {% if ticket.status == 'open' %}selected{% endif %}>Open</option>
        <option value="resolved" {% if ticket.status == 'resolved' %}selected{% endif %}>Resolved</option>
      </select>
    </div>

    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">Save Changes</button>
  </form>
</div>
{% endblock %}
